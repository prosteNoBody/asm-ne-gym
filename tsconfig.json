{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES6",
        "module": "ES2020",
        "lib": ["es2015", "es2016", "es2017", "dom", "es2018.promise"],
        "strict": true,
        "paths": {
            "@core": ["./core"],
            "@core/*": ["./core/*"],
            "@engine": ["./element-engine"],
            "@engine/*": ["./element-engine/*"],
            "@wasm": ["./wasm"],
            "@wasm/*": ["./wasm/*"],
            "@demo": ["./demo"],
            "@demo/*": ["./demo/*"],
            "@build_wasm": ["./build_wasm"],
            "@build_wasm/*": ["./build_wasm/*"]
        }
    }
}